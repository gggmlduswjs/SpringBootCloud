<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="a">

    <!-- 전체 조회 -->
    <select id="selectAll" resultType="Board">
        SELECT * FROM boardt
    </select>

    <!-- 검색 테스트 -->
    <select id="selectSearch" resultType="Board">
        SELECT *
        FROM boardt
        WHERE title LIKE '%첫 번째%'
    </select>




<!--    매개변수로 검색어 내용 받아오기-->
    <select id="selectSearchTest" resultType="Board" parameterType="String">
        SELECT *
        FROM boardt
        WHERE title LIKE '%'|| #{search} ||'%'
    </select>



</mapper>
